pipeline {
   agent {
        docker {
            image 'node:6-alpine'
        }

    stages {
        stage('Build') {
            steps {
                echo 'Building..cypress test suite'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..cypress test suite'
                sh 'npm install'
                sh 'npm run cy:run'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....the application after testing'
            }
        }
    }
    }
}